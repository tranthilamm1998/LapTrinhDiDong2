<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--Hover-->
            <solid
                android:color="#e97822" />
            <stroke
                android:width="1dp"
                android:color="#df8e58" /><!--viền khi hover-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <!--màu ngoài-->
            <gradient
                android:startColor="#999991"
                android:endColor="#353431"
                android:angle="270" />
            <!--viền-->
            <stroke
                android:width="1dp"
                android:color="#d9b9d3" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>